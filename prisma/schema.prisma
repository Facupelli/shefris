// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Pizza {
  id           String     @default(cuid()) @id
  name         String
  price        Int
  stock        Int         @default(30)
  available    Boolean     @default(true)
}
